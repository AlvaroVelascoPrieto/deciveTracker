<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateDeviceActivity">

    <!--Edit text to enter device name-->
    <EditText
        android:id="@+id/idEdtDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Device Name" />

    <!--edit text to enter device year-->
    <EditText
        android:id="@+id/idEdtDeviceYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Device Year" />

    <!--edit text to display device model-->
    <EditText
        android:id="@+id/idEdtDeviceModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Device Model" />

    <!-- Text Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Device type:"
        />

    <!-- Spinner Element -->
    <Spinner
        android:id="@+id/idSpinerDeviceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:prompt="@string/spinner_title" />

    <!--button for updating our device-->
    <Button
        android:id="@+id/idBtnUpdateDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Update Device"
        android:textAllCaps="false" />

    <!--button for deleting our device-->
    <Button
        android:id="@+id/idBtnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Delete Device"
        android:textAllCaps="false" />

</LinearLayout>
